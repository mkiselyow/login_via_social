<li id="<%= feed_item.id %>">
  <span class="user">
    <%= link_to feed_item.user.email, feed_item.user %>
  </span><br>
  <span class="content"><u><%= feed_item.title %></u></span><br>
  <span class="content"><%= feed_item.body %></span><br>
  <span class="timestamp"><small>
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </small></span>

  <% if current_user?(feed_item.user) %>

    <%= link_to "delete", feed_item, method: :delete, data: { confirm: "You sure?" }, title: feed_item.title, :class => 'delete_post' %>

  <% end %>

  <% if signed_in? %>

    <%= link_to "reply", new_post_comment_path(feed_item), :class => 'delete_post' %>
    
  <% end %>
  <hr>
  <% if feed_item.comments.any? %>
    <ul class="posts">
      <%= nested_comments feed_item.comments.arrange(:order => :created_at) %>
    </ul>
  <% end %>
</li>