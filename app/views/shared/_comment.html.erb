<div class="comment">
  <span class="user">
    <%= link_to comment.user.email, comment.user %>
  </span><br>
  <span class="content"><%= comment.body %></span><br>
  <span class="created_at"><small>
    Posted <%= time_ago_in_words(comment.created_at) %> ago.
  </small></span>
  <% if current_user?(comment.user) %>

    <%= link_to "delete", comment, method: :delete, data: { confirm: "You sure?" }, :class => 'delete_post' %>

  <% end %>

  <% if signed_in? %>

    <%= link_to "reply", new_comment_path(:parent_id => post), :class => 'delete_post' %>
    
  <% end %>
  <hr>
</div>